#Задание 1
a = input('Введите слово:')
if a == a[::-1]:
  print("палиндром")
else:
  print("не палиндром")
#Задание 2
a = input('Введите строку:')
b = input('Введите зарезерв слова').split()
print(a.replace(b,b.upper()))
#Задание 3
a = input("Введите предложения")
print(a.count('.') + a.count('!') + a.count('?'))
